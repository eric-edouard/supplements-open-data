{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"required": [
		"created",
		"contributor",
		"paper",
		"biomarker",
		"direction"
	],
	"properties": {
		"created": { "type": "string" },
		"contributor": { "type": "string" },
		"paper": { "type": "string" },
		"biomarker": { "type": "string" },
		"direction": { "enum": ["positive", "negative", "neutral"] },
		"strength": { "enum": ["strong", "moderate", "weak", "none"] },
		"dosage": {
			"type": "object",
			"properties": {
				"value": { "type": "number" },
				"min": { "type": "number" },
				"max": { "type": "number" },
				"unit": { 
					"type": "string",
					"enum": ["microgram", "milligram", "gram", "kilogram", "IU", "mg/kg", "g/kg"]
				}
			},
			"required": ["unit"],
			"anyOf": [
				{ "required": ["value"] },
				{ "required": ["min", "max"] },
				{ "required": ["value", "min", "max"] }
			]
		},
		"onset_duration": {
			"type": "object",
			"properties": {
				"value": { "type": "number" },
				"min": { "type": "number" },
				"max": { "type": "number" },
				"unit": { 
					"type": "string",
					"enum": ["immediate", "minutes", "hours", "days", "weeks", "months", "years"]
				}
			},
			"required": ["unit"],
			"anyOf": [
				{ "required": ["value"] },
				{ "required": ["min", "max"] },
				{ "required": ["value", "min", "max"] }
			]
		},
		"timing": { "type": "string" },
		"paper_quotes": {
			"type": "object",
			"properties": {
				"abstract": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"paper_content": {
					"type": "array",
					"items": {
						"type": "string"
					}
				}
			}
		}
	}
}
