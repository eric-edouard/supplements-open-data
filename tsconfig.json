{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"strict": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"outDir": "./dist"
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
